<Window x:Class="ChatTest.MessengerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="825">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="81*"/>
        </Grid.RowDefinitions>
        <Label x:Name="ChatBoxLabel" Content="type here :" HorizontalAlignment="Left" Margin="365,46,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.649,-0.353" Width="69" Grid.Row="1"/>
        <TextBox x:Name="ChatBox" HorizontalAlignment="Left" Height="56" Margin="365,77,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="319" Grid.Row="1"/>
        <Button x:Name="SendButton" Content="Send" HorizontalAlignment="Left" Margin="699,77,0,0" VerticalAlignment="Top" Width="75" Height="56" Grid.Row="1" Click="button_Click"/>
        <TextBlock x:Name="ChatContent" HorizontalAlignment="Left" Margin="365,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="238" Width="409" Grid.RowSpan="2"/>
        <StackPanel HorizontalAlignment="Left" Height="330" Margin="10,10,0,0" VerticalAlignment="Top" Width="280" Grid.RowSpan="2"/>

    </Grid>
</Window>
